generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id        String   @id @unique @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  role      Role
  Courses   Course[]
  createdAt DateTime @default(now())
}

model Course {
  id          String   @unique @default(uuid())
  title       String
  description String
  price       Int
  thumbnail   String
  createdAt   DateTime @default(now())
  duration    String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
