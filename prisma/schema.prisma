generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id               String             @id @unique @default(uuid())
  fullName         String
  bio              String?
  image            String?
  email            String             @unique
  password         String
  role             Role
  balance          Int                @default(0)
  createdAt        DateTime           @default(now())
  Courses          Course[]
  Review           Review[]
  purchasedCourses purchasedCourses[]
  CreditCard       CreditCard[]
  recordedClass    recordedClass[]
  savedCourses     savedCourses[]
}

model Course {
  id               String             @unique @default(uuid())
  title            String
  shortDescription String
  description      String
  price            Int
  thumbnail        String
  tags             String
  langauge         String             @default("English")
  isPublished      Boolean            @default(false)
  createdAt        DateTime           @default(now())
  duration         String
  level            String
  instructerId     String?            @default(uuid())
  instructer       User?              @relation(fields: [instructerId], references: [id], onDelete: Cascade)
  Review           Review[]
  purchasedCourses purchasedCourses[]
  recordedClass    recordedClass[]
  savedCourses     savedCourses[]
}

model recordedClass {
  id             String   @unique @default(uuid())
  title          String
  videoUrl       String
  markAsComplete Boolean  @default(false)
  createdAt      DateTime @default(now())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId       String
  course         Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model savedCourses {
  id       String @id @unique @default(uuid())
  courseId String
  userId   String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([courseId, userId])
}

model CreditCard {
  id             String   @unique @default(uuid())
  bankName       String
  cardHolderName String
  accountNumber  String   @unique
  cvv            String
  balance        Int      @default(30000)
  expiryDate     String
  createdAt      DateTime @default(now())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @unique @default(uuid())
  content   String
  rating    Int      @default(0)
  createdAt DateTime @default(now())
  courseId  String
  userId    String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model purchasedCourses {
  id        String   @unique @default(uuid())
  userId    String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, courseId])
}
